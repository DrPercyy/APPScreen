#:kivy 2.2.1
<LoginScreen>
    name: 'loginScreen'
    md_bg_color: '#c7edf3'
    
    MDTopAppBar:
        md_bg_color: '#5271ff'
        pos_hint: {'top': 1}
        title: 'Exam Master'
        elevation: 2
        
    

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        spacing: dp(10)
        pos_hint: {"center_x": 0.5, "center_y": .70}
        size_hint: (0.4, 0.2)
        Image:
            id: logo
            source: 'images\logo2.png'
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 10, 10
        MDLabel:
            text: 'Bem Vindo'
            bold: True
            halign: "center"
            theme_text_color: 'Custom'
            text_color: 'black'
            font_style: 'H4'

        MDLabel:
            text: 'Insira suas credenciais'
            halign: "center"
            font_style: 'Body1'
            text_color: 'black'

    MDTextField:
        id: input_user
        hint_text: 'Usu√°rio'
        halign: "left"
        pos_hint: {"center_x": 0.5, "center_y": .55}
        size_hint_x: .5
        icon_left: 'email'
        line_color_focus: 0, 0, 1, 1
        hint_text_color_focus: 0, 0, 1, 1
        text_color: 0, 0, 1, 1

    MDTextField:
        id: input_psw
        hint_text: 'Senha'
        password: True
        halign: "left"
        pos_hint: {"center_x": 0.5, "center_y": .48}
        size_hint_x: .5
        icon_left: 'key'
        line_color_focus: 0, 0, 1, 1
        hint_text_color_focus: 0, 0, 1, 1
        text_color: 0, 0, 1, 1
        

    MDIconButton:
        id: show_psw
        icon: "eye-off"
        icon_color: "blue"
        pos_hint: {"center_x": 0.73, "center_y": .48}
        on_release: root.show_psw()

    Label:
        id: error_label
        text: ""
        pos_hint: {"center_x": 0.5, "center_y": .59}
        color: 1, 0, 0, 1

    MDRectangleFlatIconButton:
        halign: "center"
        pos_hint: {"center_x": 0.5, "center_y": .38}
        icon: "login"
        text: "Login"
        theme_text_color: "Custom"
        text_color: "blue"
        line_color: "blue"
        theme_icon_color: "Custom"
        icon_color: "blue"
        on_release: 
            root.login_action()
